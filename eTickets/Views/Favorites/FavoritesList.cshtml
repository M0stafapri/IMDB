@using eTickets.Data.ViewModels;
@model FavoritesListVM

@{
    ViewData["Title"] = "Favorite List";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Your Favorite Movies</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Actors</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FavoritesList.FavoritesListItems)
                {
                    <tr>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Actors_Movies</td>
                        <td class="align-middle">@item.Movie.Description</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Favorites" asp-action="RemoveItemFromFavoritesList"
                               asp-route-id="@item.Movie.Id">
                                <i class="bi bi-bookmark-star"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <div></div>
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                    Add more movies to favorites
                </a>
            </div>
        </div>

    </div>
</div>
}
